#!/usr/bin/env node

'use strict';

const options = {
    host: 'aspiadas.com',
    path: '/randomjoke.php?l=pt'
};

const callback = response => {
    if (response.statusCode !== 200) {
        console.error('Serviço indisponível.');
        process.exit(1);
    }

    const iconv = require('iconv-lite');

    response.pipe(iconv.decodeStream('ISO-8859-1')).collect(function (error, body) {
        if (error) {
            console.error('Erro!');
            process.exit(1);
        }

        body = body
            .split('</table><p>')[1]
            .split('</p><div align="center">')[0]
            .replace(/\n?<br\s\/>/g, '');

        console.log(body);
    });
};

const http = require('http');

http.request(options, callback).on('error', function () {
    console.error('Serviço indisponível.');
    process.exit(1);
}).end();
